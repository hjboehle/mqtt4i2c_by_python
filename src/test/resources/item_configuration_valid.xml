<?xml version="1.0" encoding="UTF-8"?>
<itemlist>
	<item id="1" type="Switch" pattern="subscribe">
		<mqttdata>
			<topic>/house/homeoffice/lamp</topic>
		</mqttdata>
		<i2cdata>
			<i2c-bus>1</i2c-bus>
			<i2c-address>70</i2c-address>
			<i2c-pmx-channel>0</i2c-pmx-channel>
			<i2c-pmx-address>25</i2c-pmx-address>
		</i2cdata>
		<itemstates>
			<itemstate type="On">
				<message>on</message>
				<hex-value>1</hex-value>
				<comment>lamp lights up</comment>
			</itemstate>
			<itemstate type="Off">
				<message>off</message>
				<hex-value>0</hex-value>
				<comment>lamp does not light</comment>
			</itemstate>
		</itemstates>
	</item>
	<item id="2" type="Switch" pattern="subscribe">
		<mqttdata>
			<topic>/house/livingroom/fan</topic>
		</mqttdata>
		<i2cdata>
			<i2c-bus>1</i2c-bus>
			<i2c-address>70</i2c-address>
			<i2c-pmx-channel>0</i2c-pmx-channel>
			<i2c-pmx-address>26</i2c-pmx-address>
		</i2cdata>
		<itemstates>
			<itemstate type="On">
				<message>on</message>
				<hex-value>1</hex-value>
				<comment>fan is turning</comment>
			</itemstate>
			<itemstate type="Off">
				<message>off</message>
				<hex-value>0</hex-value>
				<comment>fan does not turn</comment>
			</itemstate>
		</itemstates>
	</item>
	<item id="3" type="Contact" pattern="publish">
		<mqttdata>
			<topic>/house/homeoffice/windowcontact</topic>
		</mqttdata>
		<i2cdata>
			<i2c-bus>1</i2c-bus>
			<i2c-address>70</i2c-address>
			<i2c-pmx-channel>0</i2c-pmx-channel>
			<i2c-pmx-address>27</i2c-pmx-address>
		</i2cdata>
		<itemstates>
			<itemstate type="Open">
				<message>open</message>
				<hex-value>0</hex-value>
				<comment>window is open</comment>
			</itemstate>
			<itemstate type="Closed">
				<message>closed</message>
				<hex-value>1</hex-value>
				<comment>window is closed</comment>
			</itemstate>
		</itemstates>
	</item>
</itemlist>